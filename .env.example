# .env.example - Configuración para Sistema de Mejora de Voz

## PARÁMETROS DE AUDIO
# Frecuencia de muestreo en Hz (estándar 16kHz para voz)
sample_rate=16000
# Tamaño de la ventana FFT para análisis espectral
n_fft=512
# Tamaño del salto entre frames (75% de solapamiento con n_fft=512)
hop_length=128
# Duración máxima de los clips de audio en segundos
clip_seconds=3

## CONFIGURACIÓN DE ENTRENAMIENTO
# Tamaño del lote para entrenamiento
batch_size=16
# Tasa de aprendizaje del optimizador
lr=0.001
# Regularización L2 para prevenir overfitting
weight_decay=0.0001
# Número máximo de épocas de entrenamiento
epochs=40

## PARÁMETROS DE RUIDO (SNR)
# Relación Señal-Ruido mínima en dB (escenarios muy ruidosos)
snr_min=-5
# Relación Señal-Ruido máxima en dB (escenarios bastante limpios)
snr_max=20

## DIRECTORIOS Y RUTAS
# Directorio para guardar checkpoints del modelo
ckpt_dir=checkpoints
# Directorio para salidas y resultados
out_dir=outputs
# Ruta a audios limpios de entrenamiento
clean_dir=data/clean/train
# Ruta a ruidos de entrenamiento
noise_dir=data/noise/train
# Ruta al dataset Speech Commands
speechcommands_dir=data/raw

## CONFIGURACIÓN DE DATASET
# URL para descargar dataset (completar si es necesario)
dataset_url=
# Nombre del dataset (completar si es necesario)
dataset_name=